# RCM Application - Development Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rcm_development
DB_USER=rcm_user
DB_PASS=rcm_dev_password
DB_ROOT_PASSWORD=root_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-development-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-development-at-least-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Security Settings
HTTPS_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
FROM_EMAIL=noreply@rcm-dev.local

# Payment Gateway Settings (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AWS Configuration (Development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=rcm-dev-bucket

# Monitoring and Logging
SENTRY_DSN=
GRAFANA_ADMIN_PASSWORD=admin_dev_password

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=false
ENABLE_AUDIT_LOGGING=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=true
ENABLE_MOCK_PAYMENTS=true