# Patient Outreach System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ovhi_db
DB_PORT=3306

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_PASSWORD=
REDIS_SESSION_HOST=localhost
REDIS_SESSION_PORT=6379
REDIS_SESSION_PASSWORD=

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your Organization Name

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://yourdomain.com/api/v1/comm/webhook/inbound

# WhatsApp Business API Configuration
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/api/v1/comm/webhook/inbound

# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
WEBHOOK_SECRET=your_webhook_secret_for_validation

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Communication Limits
MAX_SMS_LENGTH=160
MAX_EMAIL_RECIPIENTS=100
MAX_CAMPAIGN_SIZE=10000
MAX_DAILY_COMMUNICATIONS_PER_PATIENT=5

# Compliance Settings
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
PORTAL_TOKEN_EXPIRY_HOURS=24
UNSUBSCRIBE_PROCESSING_DAYS=10

# Queue Configuration
QUEUE_CONCURRENCY_URGENT=10
QUEUE_CONCURRENCY_REMINDERS=20
QUEUE_CONCURRENCY_CAMPAIGNS=15
QUEUE_CONCURRENCY_INBOUND=25
QUEUE_CONCURRENCY_WEBHOOKS=30

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL_MINUTES=5
BEST_HOUR_LEARNING_DECAY=0.1

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# External Service Timeouts (milliseconds)
SENDGRID_TIMEOUT=30000
TWILIO_TIMEOUT=30000
WHATSAPP_TIMEOUT=30000
DATABASE_TIMEOUT=10000
REDIS_TIMEOUT=5000

# Feature Flags
ENABLE_A_B_TESTING=true
ENABLE_ML_OPTIMIZATION=true
ENABLE_EMERGENCY_BYPASS=true
ENABLE_INTERNATIONAL_SMS=false
ENABLE_MARKETING_CAMPAIGNS=true

# Development/Testing
ENABLE_TEST_MODE=false
TEST_PHONE_NUMBER=+1234567890
TEST_EMAIL_ADDRESS=test@yourdomain.com
MOCK_EXTERNAL_APIS=false